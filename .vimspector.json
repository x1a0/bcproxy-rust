{
  "configurations": {
    "rust - lldb": {
      "adapter": "CodeLLDB",
      "configuration": {
        "type": "lldb",
        "request": "launch",
        "program": "${Executable}",
        "args": ["*${Args}"],
        "sourceLanguages": ["rust"]
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "Y",
          "cpp_catch": "N"
        }
      }
    },
    "rust - gdb": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${Executable}",
        "args": ["*${Args}"],
        "externalConsole": true,
        "stopOnEntry": true,
        "MIMode": "gdb"
      }
    }
  }
}
